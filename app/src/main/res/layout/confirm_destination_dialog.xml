<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="440dp"
    android:background="#121212"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/most_opaque_rounded"
        android:fontFamily="@font/lato"
        android:paddingTop="10dp"
        android:paddingRight="300dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/ibttnAccept"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDestination"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/accept_button" />

    <ImageButton
        android:id="@+id/ibttnReject"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDestination"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ibttnAccept"
        app:srcCompat="@drawable/cancel_button" />

</RelativeLayout>