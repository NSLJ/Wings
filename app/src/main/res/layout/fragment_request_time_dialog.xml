<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.fragments.dialogs.RequestTimeDialog">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/cbOption1"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@id/tvNote"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_rounded_corners_style"
            android:text="15 minutes"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbOption2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@id/cbOption1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_rounded_corners_style"
            android:text="20 minutes"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRequestTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="Request Time"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbOption2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/logo_teal"
            android:text="Make Request" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRequestTimeTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/lato"
            android:text="*NOTE:  Both you and your  Buddy must confirm the same time! "
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/etPin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbOption2"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/btnSubmit"
            android:background="@drawable/et_rounded_corners_style"
            android:ems="10"
            android:hint="Enter PIN"
            android:inputType="numberPassword"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:password="true"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>