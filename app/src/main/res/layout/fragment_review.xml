<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".mainactivity.fragments.ReviewFragment">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/satisfy"
        android:text="Review Sara?"
        android:textAlignment="center"
        android:textColor="@color/logo_teal"
        android:textSize="34sp" />

    <RatingBar
        android:id="@+id/reviewRatingBar"
        style="@android:style/Widget.DeviceDefault.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressBackgroundTint="@color/gray_100"
        android:progressTint="@color/logo_teal"
        android:rating="3"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="0.5" />

    <EditText
        android:id="@+id/etReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPromptReview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/et_rounded_corners_style"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:gravity="start|top"
        android:hint="The trip was..."
        android:inputType="textMultiLine"
        android:minHeight="140dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        tools:text="It was terrible sara is terrible it all horrible. goshgosh never ever again." />

    <TextView
        android:id="@+id/tvPromptReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewRatingBar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato"
        android:text="How was Sara as a Buddy?"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etReviewText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/logo_teal"
        android:text="Submit" />

</RelativeLayout>