<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".mainactivity.fragments.dialogs.RespondBuddyRequestDialog">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivOtherPic"
        android:layout_width="95dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivOtherPic"
        android:fontFamily="@font/satisfy"
        android:text="Annie"
        android:textColor="@color/logo_teal"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/ivOtherPic"
        android:fontFamily="@font/lato"
        android:text="annie@cpp.edu"
        android:textColor="@color/gray_100"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/rbRating"
        style="@android:style/Widget.Holo.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tvEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/ivOtherPic"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/logo_teal"
        android:rating="3.5" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOtherPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato"
        android:text="0.2m away from your destination"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ibttnAccept"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="134dp"
        android:src="@drawable/accept_button"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ibttnReject"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="48dp"
        android:textColor="#33bbff"
        android:textSize="18sp"
        tools:src="@drawable/cancel_button" />
</RelativeLayout>

</RelativeLayout>