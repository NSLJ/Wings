    <CheckBox
        android:id="@+id/cbEmergency"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbNotify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_rounded_corners_style"
        android:fontFamily="@font/lato"
        android:text="Immediate Emergency"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tvHeading"
        android:src="@drawable/safety_toolkit_button" />


    <!--
    <TextView
        android:id="@+id/tvNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeading"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/et_rounded_corners_style"
        android:fontFamily="@font/lato"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Notify my trusted contacts"
        android:textAlignment="center"
