    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/btnExit"
        android:fontFamily="@font/satisfy"
        android:text="Safety Toolkit"
        android:textAlignment="center"
        android:textColor="@color/logo_teal"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/cbNotify"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_rounded_corners_style"
        android:text="Notify my Trusted Contacts"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbEmergency"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_teal"
        android:text="confirm" />

    <EditText
        android:id="@+id/etPin"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbEmergency"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/btnAdd"
        android:background="@drawable/et_rounded_corners_style"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Enter PIN"
        android:inputType="textPersonName"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/gray" />



</RelativeLayout>
</RelativeLayout>