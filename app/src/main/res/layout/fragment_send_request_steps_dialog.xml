<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.fragments.dialogs.SendRequestStepsDialog">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvRequestTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satisfy"
            android:text="Set the Trip Destination!"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvToReviewFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRequestTimeTitle"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="45dp"
            android:background="@null"
            android:fontFamily="@font/lato"
            android:text="Please place a marker on the map to denote where you'd like travel with this Buddy!"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvToReviewFrag"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/logo_teal"
            android:text="Ok" />
    </RelativeLayout>
</RelativeLayout>