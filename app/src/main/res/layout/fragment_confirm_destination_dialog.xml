<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.fragments.dialogs.ConfirmDestinationDialog">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@color/gray_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="Find a buddy near this destination?"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeading"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:fontFamily="@font/lato"
            android:text="Destination: "
            android:textColor="@color/gray"
            android:textSize="15sp" />

    <ImageButton
        android:id="@+id/ibttnAccept"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/accept_button"
        android:text="OK"
        android:textColor="#33bbff"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/ibttnReject"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/cancel_button"
        android:text="CANCEL"
        android:textColor="#33bbff"
        android:textSize="18sp" />
